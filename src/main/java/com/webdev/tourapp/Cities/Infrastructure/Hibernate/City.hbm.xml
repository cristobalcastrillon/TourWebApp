<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.webdev.tourapp.Cities.Domain.City" table="Cities">
        <composite-id name="cityID" class="com.webdev.tourapp.Cities.Domain.ValueObjects.CityID" access="field">
            <key-property name="value" column="id"  access="field"  length="36" />
        </composite-id>

        <component name="cityName"  class="com.webdev.tourapp.Cities.Domain.ValueObjects.CityName" access="field">
            <property name="value" column="city_name" type="string" access="field" />
        </component>

        <component name="cityDefaultIATA"  class="com.webdev.tourapp.Cities.Domain.ValueObjects.CityDefaultIATA" access="field">
            <property name="value" column="city_iata" type="string" access="field" />
        </component>

        <property name="locationsInCity"  column="locations" access="field">
            <type name="com.webdev.tourapp.Cities.Infrastructure.Hibernate.LocationCustomType" />
        </property>

        <property name="toursInCity"  column="tours" access="field">
            <type name="com.webdev.tourapp.Cities.Infrastructure.Hibernate.TourCustomType" />
        </property>

    </class>
</hibernate-mapping>